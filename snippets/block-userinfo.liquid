{% if shop.customer_accounts_optional %}
	<div class="welcome-msg pull-left">
      	<div class="login_links">
      		{% if customer  %}
          		{% capture fullname %}<a class="account" rel="nofollow" href="/account" title="{{ 'customer.account.title' | t }}"><span>{{ customer.first_name }} {{ customer.last_name }}</span></a>{% endcapture %}
          		{% capture logout %}<a id="customer_logout_link" href="/account/logout" title="{{ 'layout.customer.log_out' | t }}">{{ 'layout.customer.log_out' | t }}</a>{% endcapture %}
          		{{ 'header.general.welcome_html' | t : fullname : fullname, logout: logout }}
          	{% else %}
          		{% capture longin %}<a id="customer_login_link" href="/account/login" title="{{ 'layout.customer.log_in' | t }}">{{ 'header.general.login' | t }}</a>{% endcapture %}
          		{% capture register %}<a id="customer_register_link" href="/account/register" title="{{ 'customer.register.name' | t }}">{{ 'header.general.create_account' | t }}</a>{% endcapture %}
          		{{ 'header.general.welcome_notlog_html' | t : longin : longin, register : register }}
          	{% endif %}
      	</div>
	</div>
	<div class="header_user_info e-translate-top popup-over">
		<div data-toggle="dropdown" class="popup-title dropdown-toggle">
			<span>Top links</span>
		</div>
      	<div class="dropdown-menu">
          <ul class="links">
            {% if customer  %}
            <li class="login-mb">
              <a class="account" rel="nofollow" href="/account" title="{{ 'customer.account.title' | t }}"><i class="fa fa-user"></i><span>{{ customer.first_name }} {{ customer.last_name }}</span></a>
            </li>
            <li class="login-mb">
              <a  href="/account/logout" title="{{ 'layout.customer.log_out' | t }}"><i class="fa fa-unlock"></i>{{ 'layout.customer.log_out' | t }}</a>
            </li>
            {% else %}
            <li class="login-mb">
              <a  href="/account/login" title="{{ 'layout.customer.log_in' | t }}"><i class="fa fa-lock"></i>{{ 'header.general.login' | t }}</a>
            </li>
            <li class="login-mb">
              <a  href="/account/register" title="{{ 'customer.register.name' | t }}"><i class="fa fa-edit"></i>{{ 'header.general.create_account' | t }}</a>
            </li>
            
            {% endif %}
            <li>
              <a class="account" rel="nofollow" href="/account" title="{{ 'customer.account.title' | t }}"><i class="fa fa-user"></i> {{ 'customer.account.title' | t }}</a>
            </li>
            <li>
              <a href="/cart" title="{{ 'cart.general.title' | t }}"><i class="fa fa-share"></i> {{ 'cart.general.checkout' | t }}</a>
            </li>
          </ul>
        </div>
	</div>
{% endif %}