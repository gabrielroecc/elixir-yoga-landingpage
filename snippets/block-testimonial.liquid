{% assign columns_carousel = 1 %}

{% if settings.homepage_testimmonial_enable %}
<div class="block testimmonial">
  {% if settings.homepage_testimmonial_title != blank %}
  <h4 class=" page-subheading">
    <span class="title--main">{{ settings.homepage_testimmonial_title }}</span>
    <span class="title--sub">{{ settings.homepage_testimmonial_title_sub }}</span>
  </h4>
  {% endif %}
  <div class="block-content">
    <div class="owl-carousel clearfix">
      {% for i in (1..3) %}
      {% capture homepage_testimmonial_des %}homepage_testimmonial_des_{{i}}{% endcapture %}
      {% capture homepage_testimmonial_name %}homepage_testimmonial_name_{{i}}{% endcapture %}
      {% capture homepage_testimmonial_sub %}homepage_testimmonial_sub_{{i}}{% endcapture %}
    {% if settings[homepage_testimmonial_des] != blank %}
      <div class="item">
        <p class="testimmonial__des">{{ settings[homepage_testimmonial_des] }}</p>
        {% endif %}
        {% if settings[homepage_testimmonial_name] != blank %}
        <span class="testimmonial__name"><strong>{{ settings[homepage_testimmonial_name] }}</strong></span>
        {% endif %}
        {% if settings[homepage_testimmonial_sub] != blank %}
        <span class="testimmonial__name--sub"><em>{{ settings[homepage_testimmonial_sub] }}</em></span>
        {% endif %}
      </div>
     {% endfor %}
    </div>
  </div>
</div>
{% endif %}

<script>
	$(document).ready(function() {
      $('.testimmonial .owl-carousel').each(function(){
        $(this).owlCarousel({
          items : {{ columns_carousel }},
          singleItem : true,
          lazyLoad : true,
          navigation:true
          });
      });
	});
</script>